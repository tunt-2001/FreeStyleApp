@model PaginatedList<FreeStyleApp.Models.AuditLog>
@{
    ViewData["Title"] = "Nhật ký hoạt động";
}

<h1 class="h3 mb-2 text-gray-800">@ViewData["Title"]</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Bộ lọc</h6>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">Tên người dùng</label>
                    <input type="text" name="searchUser" class="form-control" value="@ViewData["CurrentFilterUser"]" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Loại hành động</label>
                    <select name="actionType" class="form-control" asp-items="@(new SelectList(ViewBag.ActionTypes, ViewData["CurrentFilterAction"]))">
                        <option value="">-- Tất cả --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Từ ngày</label>
                    <input type="date" name="fromDate" class="form-control" value="@ViewData["CurrentFromDate"]" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Đến ngày</label>
                    <input type="date" name="toDate" class="form-control" value="@ViewData["CurrentToDate"]" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-filter"></i> Lọc</button>
                    <a asp-action="Index" class="btn btn-link w-100 text-decoration-none">Xóa bộ lọc</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kết quả</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Thời gian</th>
                        <th>Người dùng</th>
                        <th>Loại hành động</th>
                        <th>Chi tiết</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td>@log.Timestamp.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")</td>
                            <td>@log.UserName</td>
                            <td>@log.ActionType</td>
                            <td>@log.Details</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @{
            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
        }
        <div class="d-flex justify-content-between align-items-center mt-3">
            <div>
                <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-searchUser="@ViewData["CurrentFilterUser"]" asp-route-actionType="@ViewData["CurrentFilterAction"]" asp-route-fromDate="@ViewData["CurrentFromDate"]" asp-route-toDate="@ViewData["CurrentToDate"]" class="btn btn-secondary @prevDisabled">Trước</a>
                <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-searchUser="@ViewData["CurrentFilterUser"]" asp-route-actionType="@ViewData["CurrentFilterAction"]" asp-route-fromDate="@ViewData["CurrentFromDate"]" asp-route-toDate="@ViewData["CurrentToDate"]" class="btn btn-secondary @nextDisabled">Sau</a>
            </div>
            <span>Trang <strong>@Model.PageIndex</strong> của <strong>@Model.TotalPages</strong></span>
        </div>
    </div>
</div>