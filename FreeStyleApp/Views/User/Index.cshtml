@using FreeStyleApp.Domain.Entities
@model PaginatedList<User>
@{
    ViewData["Title"] = "Quản lý Người dùng";
    var allPermissions = ViewBag.AllPermissions as List<Permission> ?? new List<Permission>();
}

<h1 class="h3 mb-2 text-gray-800">@ViewData["Title"]</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách Người dùng</h6>
        <button class="btn btn-primary btn-sm" onclick="openUserModal(null)">
            <i class="fas fa-plus"></i> Thêm mới
        </button>
    </div>
    <div class="card-body">
    
    @* === BẮT ĐẦU PHẦN SỬA LỖI BỐ CỤC === *@
    <div class="row mb-3">
        <div class="col-md-8">
            <form asp-action="Index" method="get" class="d-none d-sm-inline-block form-inline mr-auto navbar-search">
                <div class="input-group">
                    <input type="text" name="SearchString" class="form-control bg-light border-0 small" placeholder="Tìm kiếm theo tên..." value="@ViewData["CurrentFilter"]">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>

    </div>
    @* === KẾT THÚC PHẦN SỬA LỖI BỐ CỤC === *@

    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th><a asp-action="Index" asp-route-sortOrder="@ViewData["UserNameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Tên đăng nhập</a></th>
                    <th><a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Họ và Tên</a></th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.FullName</td>
                        <td class="text-center">
                            <button class="btn btn-primary btn-circle btn-sm" title="Sửa" onclick="openUserModal('@user.Id')"><i class="fas fa-edit"></i></button>
                            <button class="btn btn-danger btn-circle btn-sm" title="Xóa" onclick="deleteUser('@user.Id', '@user.UserName')"><i class="fas fa-trash"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @* === BẮT ĐẦU PHẦN SỬA LỖI PHÂN TRANG === *@
    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }
    <div class="row">
        <div class="col-sm-12 col-md-5">
            <div class="dataTables_info" role="status" aria-live="polite">Trang <strong>@Model.PageIndex</strong> của <strong>@Model.TotalPages</strong></div>
        </div>
        <div class="col-sm-12 col-md-7">
            <div class="dataTables_paginate paging_simple_numbers float-right">
                <ul class="pagination">
                    <li class="paginate_button page-item previous @prevDisabled">
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="page-link">Trước</a>
                    </li>
                     <li class="paginate_button page-item next @nextDisabled">
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="page-link">Sau</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    @* === KẾT THÚC PHẦN SỬA LỖI PHÂN TRANG === *@
</div>
</div>

<div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userModalLabel">Thông tin Người dùng</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                @* Thêm novalidate để tắt validate mặc định của trình duyệt *@
                <form id="userForm" novalidate>
                    <input type="hidden" id="userId" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="username" class="form-label">Tên đăng nhập</label>
                            <input type="text" class="form-control" id="username" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="fullName" class="form-label">Họ và Tên</label>
                            <input type="text" class="form-control" id="fullName" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Mật khẩu</label>
                        <input type="password" class="form-control" id="password" autocomplete="new-password" />
                    </div>
                    <hr />
                    <h5>Phân quyền</h5>
                    <div class="row" id="permissionsContainer">
                        @foreach (var permission in allPermissions)
                        {
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="@permission.Id" id="perm_@permission.Code.Replace('.', '_')">
                                    <label class="form-check-label" for="perm_@permission.Code.Replace('.', '_')">
                                        @permission.Name
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                @* Sửa data-bs-dismiss thành data-dismiss *@
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy bỏ</button>
                <button type="button" class="btn btn-primary" onclick="saveUser()">Lưu thay đổi</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Không dùng new bootstrap.Modal nữa, để jQuery của template tự xử lý

        function openUserModal(userId) {
            document.getElementById('userForm').reset();
            $('#userForm').removeClass('was-validated'); // Xóa trạng thái validate cũ
            document.getElementById('username').disabled = false;
            document.getElementById('userId').value = userId || '';

            // Yêu cầu nhập mật khẩu khi tạo mới
            $('#password').prop('required', !userId);

            if (!userId) {
                $('#userModalLabel').text('Thêm Người dùng mới');
                $('#userModal').modal('show');
            } else {
                $('#userModalLabel').text('Chỉnh sửa Người dùng');
                $('#username').prop('disabled', true);

                fetch(`/User/GetUser?id=${userId}`)
                    .then(res => res.json())
                    .then(data => {
                        $('#userId').val(data.id);
                        $('#username').val(data.userName);
                        $('#fullName').val(data.fullName);

                        let userPermissions = data.permissions || [];
                        document.querySelectorAll('#permissionsContainer .form-check-input').forEach(checkbox => {
                            checkbox.checked = userPermissions.includes(checkbox.value);
                        });
                        $('#userModal').modal('show');
                    });
            }
        }

        function saveUser() {
            const form = document.getElementById('userForm');

            // Thêm logic validate ở đây
            if (!form.checkValidity()) {
                form.classList.add('was-validated'); // Hiển thị thông báo lỗi của Bootstrap
                return; // Dừng lại nếu form không hợp lệ
            }

            let selectedPermissions = [];
            document.querySelectorAll('#permissionsContainer .form-check-input:checked').forEach(checkbox => {
                selectedPermissions.push(checkbox.value);
            });

            const userData = {
                id: $('#userId').val(),
                userName: $('#username').val(),
                fullName: $('#fullName').val(),
                password: $('#password').val(),
                permissions: selectedPermissions
            };

            fetch('/User/SaveUser', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(userData)
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    $('#userModal').modal('hide');
                    showDialog(data.message, true);
                    setTimeout(() => window.location.reload(), 1500);
                } else {
                    showDialog(data.message, false);
                }
            });
        }

            function deleteUser(userId, username) {
            if (confirm(`Bạn có chắc chắn muốn xóa người dùng '${username}' không? Hành động này không thể hoàn tác.`)) {
                fetch(`/User/DeleteUser?id=${userId}`, { method: 'POST' })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                             showDialog(data.message, true);
                             setTimeout(() => window.location.reload(), 1500);
                        } else {
                             showDialog(data.message, false);
                        }
                    });
            }
        }
    </script>
}