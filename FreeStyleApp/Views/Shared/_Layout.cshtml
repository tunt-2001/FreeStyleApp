@using System.Security.Claims

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FreeStyleApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FreeStyleApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FreeStyleApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>

                        @if (User.Claims.Any(c => c.Type == "Permissions" && c.Value.Contains("Admin")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Quản lý Người dùng</a>
                            </li>
                        }
                    </ul>

                    <div class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            var userFullName = User.FindFirst("UserFullName")?.Value;
                            <span class="navbar-text me-3">
                                Xin chào, <strong>@userFullName</strong>!
                            </span>
                            <a class="btn btn-outline-danger" asp-controller="Account" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i> Đăng xuất
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-primary" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                            </a>
                        }
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FreeStyleApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Quyền riêng tư</a>
        </div>
    </footer>

    <div class="modal fade" id="notificationModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header text-white" id="notificationModalHeader">
                    <h5 class="modal-title" id="notificationModalLabel">Thông báo</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="notificationModalBody"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function showDialog(message, isSuccess) {
            const modal = new bootstrap.Modal(document.getElementById('notificationModal'));
            const modalHeader = document.getElementById('notificationModalHeader');

            modalHeader.classList.remove('bg-success', 'bg-danger');
            if (isSuccess) {
                modalHeader.classList.add('bg-success');
            } else {
                modalHeader.classList.add('bg-danger');
            }

            document.getElementById('notificationModalBody').innerHTML = message;
            modal.show();
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>