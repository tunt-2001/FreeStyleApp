@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập - FreeStyleApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #0ea5e9 0%, #6366f1 50%, #8b5cf6 100%);
            font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans", "Apple Color Emoji", "Segoe UI Emoji";
            padding: 24px;
        }

        .login-wrapper {
            width: 100%;
            max-width: 960px;
        }

        .login-card {
            border: none;
            border-radius: 16px;
            overflow: hidden;
            backdrop-filter: saturate(180%) blur(6px);
            box-shadow: 0 20px 45px rgba(0,0,0,0.25);
        }

        .login-illustration {
            background: radial-gradient(1000px 400px at -10% -10%, rgba(255,255,255,0.2), transparent),
                        radial-gradient(800px 300px at 120% 120%, rgba(255,255,255,0.1), transparent),
                        linear-gradient(140deg, rgba(255,255,255,0.16), rgba(255,255,255,0.08));
            min-height: 420px;
        }

        .brand {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .brand-badge {
            width: 40px;
            height: 40px;
            border-radius: 12px;
            background: linear-gradient(135deg, #2563eb, #06b6d4);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-weight: 700;
        }

        .form-control.form-control-lg {
            border-radius: 10px;
            padding-top: 12px;
            padding-bottom: 12px;
        }

        .btn-gradient {
            background: linear-gradient(135deg, #2563eb, #06b6d4);
            border: none;
        }
        .btn-gradient:hover { filter: brightness(0.95); }
    </style>
</head>
<body>
    <div class="login-wrapper">
        <div class="card login-card">
            <div class="row g-0">
                <div class="col-lg-6 d-none d-lg-block login-illustration p-5 text-white">
                    <div class="h-100 d-flex flex-column">
                        <div class="brand mb-4">
                            <div class="brand-badge">FS</div>
                            <div>
                                <div class="fw-bold">FreeStyleApp</div>
                                <small class="opacity-75">Secure. Fast. Simple.</small>
                            </div>
                        </div>
                        <div class="mt-auto">
                            <h3 class="fw-semibold">Chào mừng trở lại</h3>
                            <p class="mb-0 opacity-75">Đăng nhập để tiếp tục làm việc.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card-body p-5">
                        <div class="mb-4">
                            <h4 class="fw-bold mb-1">Đăng nhập</h4>
                            <div class="text-muted">Sử dụng tài khoản được cấp để truy cập hệ thống</div>
                        </div>

                        <form id="loginForm" novalidate>
                            <div class="mb-3">
                                <label for="username" class="form-label">Tên đăng nhập</label>
                                <input type="text" class="form-control form-control-lg" id="username" placeholder="Nhập tên đăng nhập" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Mật khẩu</label>
                                <input type="password" class="form-control form-control-lg" id="password" placeholder="Nhập mật khẩu" required>
                            </div>
                            <div class="d-flex align-items-center justify-content-end mb-3">
                                <a class="small text-decoration-none" href="#" onclick="showDialog('Liên hệ quản trị để khôi phục mật khẩu.', false); return false;">Quên mật khẩu?</a>
                            </div>
                            <div class="d-grid mt-4">
                                <button type="submit" class="btn btn-gradient btn-lg text-white">Đăng nhập</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="notificationModal" tabindex="-1" aria-labelledby="notificationModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header text-white" id="notificationModalHeader">
                    <h5 class="modal-title" id="notificationModalLabel">Thông báo</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="notificationModalBody">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function showDialog(message, isSuccess) {
            const modalElement = document.getElementById('notificationModal');
            const modal = bootstrap.Modal.getOrCreateInstance(modalElement);

            const modalHeader = document.getElementById('notificationModalHeader');
            const modalBody = document.getElementById('notificationModalBody');

            modalHeader.classList.remove('bg-success', 'bg-danger');

            if (isSuccess) {
                modalHeader.classList.add('bg-success'); 
            } else {
                modalHeader.classList.add('bg-danger'); 
            }

            modalBody.innerHTML = message;
            modal.show();
        }

        document.getElementById('loginForm').addEventListener('submit', function (event) {
            event.preventDefault();

            const usernameInput = document.getElementById('username');
            const passwordInput = document.getElementById('password');

            const loginData = {
                username: usernameInput.value,
                password: passwordInput.value
            };

            fetch('/Account/DoLogin', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(loginData)
            })
            .then(response => response.json()) 
            .then(data => {
                if (data.success) {
                    window.location.href = data.redirectUrl;
                } else {
                    showDialog(data.message, false);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showDialog('Không thể kết nối đến máy chủ. Vui lòng thử lại sau.', false);
            });
        });
    </script>
</body>
</html>