@{
    ViewData["Title"] = "Báo cáo và thống kê";
}

<h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>

<div class="row">
    <!-- Statistics Cards -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Tổng số người dùng</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalUsers</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Tổng số vai trò</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalPermissions</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-shield-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Đăng nhập hôm nay</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.LoginsToday</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-sign-in-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Tổng nhật ký</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalAuditLogs</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-history fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Export Reports -->
<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Xuất báo cáo</h6>
            </div>
            <div class="card-body">
                <h6>Nhật ký hoạt động</h6>
                <form id="exportAuditLogForm" method="post" action="/Reports/ExportAuditLogs">
                    <div class="form-group">
                        <label>Từ ngày</label>
                        <input type="date" class="form-control" name="fromDate" />
                    </div>
                    <div class="form-group">
                        <label>Đến ngày</label>
                        <input type="date" class="form-control" name="toDate" />
                    </div>
                    <div class="form-group">
                        <label>Loại hành động</label>
                        <input type="text" class="form-control" name="actionType" placeholder="VD: Đăng nhập thành công" />
                    </div>
                    <div class="form-group">
                        <label>Người dùng</label>
                        <input type="text" class="form-control" name="userName" placeholder="Tên người dùng" />
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-download"></i> Xuất CSV
                    </button>
                </form>

                <hr />

                <h6>Danh sách người dùng</h6>
                <form method="post" action="/Reports/ExportUsers">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-download"></i> Xuất CSV
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Top Users Activity -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Top người dùng hoạt động</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Người dùng</th>
                                <th>Số lần đăng nhập</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.UserActivities != null)
                            {
                                @foreach (var activity in ViewBag.UserActivities)
                                {
                                    <tr>
                                        <td>@activity.UserName</td>
                                        <td>@activity.Count</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activities -->
<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Hoạt động gần đây</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Thời gian</th>
                                <th>Người dùng</th>
                                <th>Loại hành động</th>
                                <th>Chi tiết</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.RecentActivities != null)
                            {
                                @foreach (var activity in ViewBag.RecentActivities)
                                {
                                    <tr>
                                        <td>@activity.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>@activity.UserName</td>
                                        <td>@activity.ActionType</td>
                                        <td>@activity.Details</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

