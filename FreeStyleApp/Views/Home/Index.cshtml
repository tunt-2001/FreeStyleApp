@using FreeStyleApp.Domain.Entities
@model IEnumerable<AuditLog>
@{
    ViewData["Title"] = "Bảng điều khiển";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
</div>

<div class="row">
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Tổng số Người dùng</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalUsers</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-people-fill h2 text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Tổng số Quyền</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalPermissions</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-shield-lock-fill h2 text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Lượt đăng nhập (Hôm nay)</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.LoginsToday</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-box-arrow-in-right h2 text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Hoạt động gần đây</h6>
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            @foreach (var log in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-start">
                    <div>
                        <small class="text-muted">@log.Timestamp.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")</small>
                        <p class="mb-0">
                            <strong>@log.UserName</strong> đã thực hiện: <strong>@log.ActionType</strong>.
                            <br>
                            <em>@log.Details</em>
                        </p>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>